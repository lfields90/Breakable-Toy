<div class="div-height large-7 large-centered columns">
  <h1 class="edit-headers">Edit City</h1>
  <div class="panel">
    <%= form_for @city do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_area :description %>

      <%= f.label :website_url %>
      <%= f.url_field :website_url %>

      <%= f.submit "Edit city", class: "custom-button button expand" %>
    <%- end -%>
  </div>
</div>
