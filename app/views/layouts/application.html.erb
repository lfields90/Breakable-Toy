<!DOCTYPE html>
<html>
<head>
  <title>Greater Boston</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= stylesheet_link_tag "https://fonts.googleapis.com/css?family=Oswald:700,300" %>
  <%= javascript_include_tag "vendor/modernizr" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="top-bar">
    <ul class="title-area">
      <li class="name">
        <h1> <%= link_to 'Greater Boston', root_path %> </h1>
      </li>
    </ul>

    <section class="top-bar-section">
      <ul class="right">
        <li class="has-form">
          <div class="row collapse">
            <form>
              <%= form_tag root_path, :method => "get", id: "search-form" do %>
              <div class="large-8 small-9 columns">
                <%= text_field_tag :search, params[:search], required: true, placeholder: "Search" %>
              </div>
              <div class="large-4 small-3 columns">
                <button href="#" class="button tiny" type="submit">Search</button>
              </div>
            <% end %>
          </form>
        </div>
      </li>
        <%- if current_user -%>
          <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></li>
          <li><%= link_to current_user.username, user_path(current_user) %></li>
        <%- else -%>
          <li><%= link_to 'Facebook', '/auth/facebook' %></li>
          <li><%= link_to 'Twitter', '/auth/twitter' %></li>
          <li><%= link_to 'Sign Up', new_user_registration_path %></li>
          <li><%= link_to 'Sign In', new_user_session_path %></li>
        <%- end -%>
      </ul>
    </section>
  </nav>

  <div class="row">
    <div class="small-6 columns small-centered">
    <%- flash.each do |key, value| -%>
      <div data-alert class="flash alert-box <%= key %>" >
        <%= value %>
        <a href="#" class="close">&CircleTimes;</a>
      </div>
    <%- end -%>
    </div>
  </div>

  <div class="row">
    <div class="column">
      <%= yield %>
    </div>
  </div>

  <%= javascript_include_tag 'application' %>
  <%= yield :extra_footer %>

</body>
</html>
